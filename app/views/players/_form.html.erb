<%= form_for @player, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @player.errors.any? %>
    <div class="alert alert-block alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h2><%= pluralize(@player.errors.count, "error") %> prohibited this player from being saved:</h2>

      <ul>
      <% @player.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="row">
      <div class="span12">
        <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <div class="controls">
            <%= f.email_field :email, :autofocus => true, :class => 'email_field', :placeholder => @default_email %>
            <%= f.hidden_field :tournament_id, value: @tournament.id if @participate %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <div class="control-group">
          <%= f.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :name, :class => 'text_field' %>
            <%= f.hidden_field :password, value: @password %>
            <%= f.hidden_field :password_confirmation, value: @password %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <div class="control-group">
          <%= f.label :country_id, :class => 'control-label' %>
          <div class="controls">
            <%= f.collection_select :country_id, @countries, :id, :name, {:selected => @country_id}, {:class => "collection_select"} %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <div class="control-group">
          <div class="controls">
            <%= recaptcha_tags :noscript => true unless organizer_signed_in? or admin_signed_in? %>
          </div>
        </div>
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary', :onclick => "$(body).addClass('loading');" %>
    <%= link_to 'Cancel', players_path(:tournament => @tournament, :participant => @participate), :class => 'btn' %>
  </div>
<% end %>
