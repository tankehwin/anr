<div class="container round">

<h2>Sign in</h2>

<% flash.each do |name, msg| %>
  <% if msg.class == Array %>
    <% msg.each do |message| %>
      <%= content_tag :p, message, :id => "notice" %>
    <% end %>
  <% else %>
    <%= content_tag :p, msg, :id => "notice" %>
  <% end %>
<% end %>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :class => "round quarter3rd", :onfocus => 'this.style.color="#666"' %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password, :class => "round quarter3rd", :onfocus => 'this.style.color="#666"' %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "round devise" %></div>
<% end %>

</div>

<%= render "devise/shared/links" %>
