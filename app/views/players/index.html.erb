<h1>All Players Listings</h1>

<table>
  <tr>
    <th>Hacking License</th>
    <th>Email</th>
    <th>Name</th>
    <th>Points</th>
    <th>Matches</th>
  </tr>

<% @players.each do |player| %>
  <tr>
    <td><%= player.username %></td>
    <td><%= player.email %></td>
    <td><%= player.name %></td>
    <td><%= player.points %></td>
    <td><%= player.matches %></td>
  </tr>
<% end %>
</table>

<br />

