<div class="page-header">
  <h1>All Players Ranking</h1>
</div>

<% if notice %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
    <%= notice %>
  </div>
<% end %>

<%= will_paginate @players %>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Rank</th>
      <th>Rating</th>
      <th>Hacking License</th>
      <th>Name</th>
      <th>Prestiges</th>
      <th>Match Points</th>
      <th>Matches</th>
      <th>Tournaments</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    
    <% @players.each do |player| %>
      <tr>
        <td><%= @rank_counter = @rank_counter + 1 %></td>
        <td><%= player.rating.round %></td>
        <td><%= player.username %></td>
        <td><%= player.name %></td>
        <td><%= player.prestiges %></td>
        <td><%= player.match_points %></td>
        <td><%= player.matches %></td>
        <td><%= player.tournaments %></td>
        <td>
          <%= link_to 'Edit', edit_player_path(player), :class => 'btn btn-mini' %>
          <%= link_to 'Delete', player, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @players %>

<%= link_to 'Add a New Player', new_player_path(:tournament => @tournament, :participant => @participate), :class => 'btn btn-primary' %>
<%= link_to 'Back to Tournament Page', @tournament, :class => 'btn' if @tournament %>

<br /><br />
