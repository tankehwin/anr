<div class="page-header">
  <h2>Change your password</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal' }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-block alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= devise_error_messages! %>
    </div>
  <% end %>
  
  <fieldset>
    <div class="control-group">
    	<%= f.label :password, "New password" %>
    	<div class="controls">
    	  <%= f.password_field :password, :autofocus => true, :class => 'password_field' %>
    	</div>
    </div>

    <div class="control-group">
    	<%= f.label :password_confirmation, "Confirm new password" %>
    	<div class="controls">
    	  <%= f.password_field :password_confirmation, :class => 'password_field' %>
        <%= f.hidden_field :reset_password_token %>
    	</div>
    </div>
  </fieldset>

  <div class="form-actions">
    <%= f.submit "Change my password", :class => 'btn btn-primary', :onclick => "$(body).addClass('loading');" %>
    <%= link_to 'Cancel', :back, :class => 'btn' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
