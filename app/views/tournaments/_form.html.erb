<%= form_for @tournament, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @tournament.errors.any? %>
    <div class="alert alert-block alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h2><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

      <ul>
      <% @tournament.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <div class="row">
      <div class="span12">
        <div class="control-group clearfix">
          <%= f.label :name, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :name, :autofocus => true, :class => 'text_field' %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <div class="control-group clearfix">
          <%= f.label :description, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_area :description, :class => 'text_area' %>
          </div>
        </div>
      </div>
    </div>
  </fieldset>
  
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary', :onclick => "$(body).addClass('loading');" %>
    <%= link_to 'Cancel', :back, :class => 'btn' %>
  </div>
<% end %>
