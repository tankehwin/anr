<!DOCTYPE html>
<html>
<head>
  <title>Android:Netrunner Scheduler</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= yield(:head) %>
</head>
<body>
<%= nav_bar :inverse => true, :fixed => :top, :brand => image_tag("logo.png", :title => "Android:Netrunner Scheduler"), :responsive => true do %>
  <%= menu_group do %>
    <%= menu_divider %>
    <%= menu_item "Home", root_path %>
    <%= drop_down "Navigation" do %>
      <%= menu_item "Players Ranking", players_path(:tournament => @tournament) %>
      <%= menu_item "Tournament Navigator", tournaments_path %>
      <%= menu_item "Register New Player", new_player_path(:tournament => @tournament, :participant => @participate) %>
      <%= drop_down_divider %>
      <%= menu_item "Add a New Tournament", new_tournament_path %>
      <%# if current_player %>
        <%#= menu_item "Profile", current_player %>
      <%# end %>
    <% end %>
    <%= menu_item "About Us", about_us_path %>
    <%= menu_item "Contact", contact_path %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <%# if current_organizer %>
      <%#= menu_item "Log Out", log_out_path %>
    <%# else %>
      <%#= form_for @organizer, :url => session_path(:organizer), html => {:class=> "navbar-form pull-right"} do |f| -%>
        <p><%#= f.text_field :email %></p>
        <p><%#= f.password_field :password %></p>
        <p><%#= f.submit "Sign in" %></p>
      <%# end -%>
    <%# end %>
  <% end %>
<% end %>
<div class="container">
  <%= yield %>
</div>
</body>
</html>
