<div class="page-header">
  <h2>Forgot your password?</h2>
</div>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  <% if resource.errors.any? %>
    <div class="alert alert-block alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= devise_error_messages! %>
    </div>
  <% end %>

  <fieldset>
  	<div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.email_field :email, :autofocus => true, :class => 'email_field', :placeholder => "neo@thematrix.com" %>
      </div>
    </div>
  </fieldset>

  <div class="form-actions">
    <%= f.submit "Send me reset password instructions", :class => 'btn btn-primary', :onclick => "$(body).addClass('loading');" %>
    <%= link_to 'Cancel', :back, :class => 'btn' %>
  </div>
<% end %>

<%= render "organizers/shared/links" %>
