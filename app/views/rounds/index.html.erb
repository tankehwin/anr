<h1>Listing rounds</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Start</th>
    <th>End</th>
    <th>State</th>
    <th>Action</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rounds.each do |round| %>
  <tr>
    <td><%= round.number %></td>
    <td><%= round.start %></td>
    <td><%= round.end %></td>
    <td><%= round.state %></td>
    <td><%= round.action %></td>
    <td><%= link_to 'Show', round %></td>
    <td><%= link_to 'Edit', edit_round_path(round) %></td>
    <td><%= link_to 'Destroy', round, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

